{
  "name": "potion",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/garrettbear/potion.git",
  "author": "Garrett Bear <gwhisten@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.26",
    "@storybook/addon-essentials": "^6.0.26",
    "@storybook/addon-links": "^6.0.26",
    "@storybook/html": "^6.0.26",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.12",
    "react-is": "^16.13.1"
  },
  "dependencies": {
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "watch-sass": "node-sass -w scss -o dist/css",
    "build-css": "node-sass --include-path scss scss/index.scss   public/css/main.css --output-style compressed",
    "start": "npm-run-all --parallel styles:watch browsersync",
    "styles:watch": "node-sass -w scss -o dist/css",
    "browsersync2": "browser-sync start --server --files \"*.html, *.js, *.css\"",
    "browsersync": "browser-sync start --server --files dist/css/index.css"
  }
}
